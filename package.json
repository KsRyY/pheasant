{
  "name": "root",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "eslint-config-prettier": "6.10.1",
    "eslint-config-rem": "4.0.0",
    "eslint-config-xo-react": "0.23.0",
    "eslint-plugin-prettier": "3.1.2",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "3.0.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.1",
    "prettier": "2.0.4",
    "xo": "0.29.0"
  },
  "workspaces": [
    "client",
    "middleware"
  ],
  "lint-staged": {
    "*.[js,jsx]": [
      "xo --fix"
    ],
    "*.[json,yaml,md]": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "xo": {
    "extends": [
      "rem",
      "xo-react"
    ]
  }
}
